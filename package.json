{
  "name": "@stephendolan/helpscout-cli",
  "version": "1.0.2",
  "description": "A command-line interface for Help Scout",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": {
    "helpscout": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsup",
    "test": "vitest",
    "lint": "oxlint src",
    "format": "biome format --write src",
    "format:check": "biome format src",
    "typecheck": "tsc --noEmit",
    "link": "npm run build && npm link",
    "start": "node dist/cli.js",
    "audit": "npm audit --audit-level=moderate",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "helpscout",
    "help-scout",
    "cli",
    "customer-support",
    "command-line",
    "llm",
    "ai-friendly"
  ],
  "author": "Stephen Dolan <https://github.com/stephendolan>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stephendolan/helpscout-cli.git"
  },
  "bugs": {
    "url": "https://github.com/stephendolan/helpscout-cli/issues"
  },
  "homepage": "https://github.com/stephendolan/helpscout-cli#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@napi-rs/keyring": "^1.2.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "conf": "^15.0.2",
    "dotenv": "^17.2.3",
    "html-to-text": "^9.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "oxlint": "^1.35.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
